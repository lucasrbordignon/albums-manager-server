# MAIL
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=mail@example.com
MAIL_PASS=your_production_email_password

# UPLOADS
UPLOAD_DIR=/app/uploads

# CORS
CORS_ORIGIN=https://your-production-domain.com