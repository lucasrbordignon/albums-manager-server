# APP
NODE_ENV=production
PORT=3333
JWT_SECRET=your_production_jwt_secret

# DATABASE
POSTGRES_DB=albums
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_URL=postgresql://postgres:postgres@postgres:5432/albums?schema=public

# REDIS
REDIS_HOST=redis
REDIS_PORT=6379
