generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  name          String
  password      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  refreshTokens RefreshToken[]
  albums        Album[]

  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("refresh_tokens")
}

model Album {
  id          String @id @default(uuid())
  title       String
  description String
  photoCount  Int    @default(0)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  userId String
  user   User   @relation(fields: [userId], references: [id])

  photos    Photo[]

  @@index([userId])
  @@map("albums")
}

model Photo {
  id              String   @id @default(uuid())

  title           String
  description     String?
  acquiredAt      DateTime

  sizeInBytes     Int
  mimeType        String
  filePath        String   @map("file_path")
  thumbnailPath   String?  @map("thumbnail_path")
  hash            String?  

  dominantColor   String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  deletedAt       DateTime?

  albumId         String?
  album           Album?   @relation(fields: [albumId], references: [id])

  @@map("photos")

  @@index([albumId, deletedAt, acquiredAt])
  @@unique([id, hash, deletedAt])
}
