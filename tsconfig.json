{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "src/",
    "paths": {
      "@/*": ["*"],
      "@tests/*": ["../tests/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}